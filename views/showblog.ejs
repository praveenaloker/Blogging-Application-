<%- include("partials/header") %>

<div class="topnav">
  <a id="homeNav" class="active" href="/dashboard"><i class="fas fa-blog"></i> Blogging Application</a>
  <a href="/users/newblog">New Post</a>
  <a id="signinLink" href="/logout">Log Out</a>
</div>

<!-- Flash Message -->
<% if (message && message.length > 0) { %>
<div id="flashDiv" class="flash welcome">
  <%= message %>
</div>
<% } %>

<div class="container showblogContainer">
  <div class="blogshow margin-top-0">
    <h1 class="margin-top-0"><%= blog[0].title %></h1>
    <h3><%= blog[0].author %> on <%= blog[0].dateofPublish %></h3>
    <img class="blogImages showImage" src="<%= blog[0].imgURL %>" style="width:40%;margin:5px auto;margin-left:0%;" alt="blogImage"><br>
    <p><%= blog[0].blogText %></p>
    <% if (user && blog[0].userEmail === user.email) { %>
    <div class="edDiv">
      <a class="readMore-btn" href="/blogs/<%= blog[0].id %>/edit">Edit</a>
      <form id="delete" action="/blogs/<%= blog[0].id %>?_method=DELETE" method="POST">
        <button class="delete-btn">Delete</button>
      </form>
    </div>
    <% } %>
    <!-- <p><%= blog.blogText %></p> -->
  </div>
</div>

<%- include("partials/footer") %>